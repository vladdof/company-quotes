{
    "compilerOptions": {
        // это соответствует поддержке браузеров у Vue
        "target": "es5",
        "module": "esnext",
        "allowJs": true /* Разрешить компиляцию JavaScript файлов. */,
        "checkJs": true /* Сообщить об ошибках в .js файлах. */,
        // это обеспечивает более строгий вывод для свойств данных в `this`
        "strict": false,
        /* Выдавать ошибку в выражениях и объявлениях с неявным типом 'any'. */
        "noImplicitAny": false,
        // при использовании webpack 2+ или rollup, добавить поддержку tree-shaking:
        "moduleResolution": "node",
        "baseUrl": "./",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "src/**/*.scss",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ]
}
